<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.etalase.AddEtalaseActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/etalaseAddToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/etalaseAddSubmit"
        style="@style/PrimaryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tambah Alat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/etalaseAddSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etalaseAddToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto Alat"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/etalaseAddUpload"
                style="@style/SecondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unggah Gambar" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nama Alat"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etalaseAddName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contoh: Tas Carrier Eiger"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:theme="@style/FormEditText" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Alat"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etalaseAddDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contoh: Tas carrier ini dapat dibawa untuk \n keperluan pendakian"
                android:inputType="textImeMultiLine"
                android:singleLine="false"
                android:theme="@style/FormEditText" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga Alat"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etalaseAddPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contoh: 50000"
                android:inputType="number"
                android:singleLine="true"
                android:theme="@style/FormEditText" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Alat"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etalaseAddAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contoh: 10"
                android:inputType="number"
                android:singleLine="true"
                android:theme="@style/FormEditText" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>