<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/kudakiPrimary</item>
        <item name="colorPrimaryDark">@color/kudakiPrimaryDark</item>
        <item name="colorAccent">@color/kudakiAccentWhite</item>
        <item name="colorControlHighlight">@color/kudakiPrimary</item>
    </style>

    <!--Toolbar theme-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/kudakiAccentWhite</item>
        <item name="android:colorAccent">@color/kudakiAccentWhite</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/image_splash</item>
    </style>

    <!-- Form EditText Theme -->
    <style name="FormEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/kudakiPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Primary Button Theme -->
    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Secondary Button Theme -->
    <style name="SecondaryButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Social Media Login Theme -->

    <!-- Dialog Theme -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/kudakiPrimaryDark</item>
    </style>

    <!-- Radio Button Theme -->
    <style name="RadioButtonTheme" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/ic_star</item>
    </style>

</resources>