#!/bin/bash

docker build -f ./Containerfile -t $IMAGE_NAME --build-arg ARCH=$ARCH --build-arg KAFKA_BROKERS=$KAFKA_BROKERS --build-arg REST_PORT=$REST_PORT --build-arg USER_AUTH_SERVICE_GRPC_ADDRESS=$USER_AUTH_SERVICE_GRPC_ADDRESS --build-arg REST_SUBDOMAIN=$REST_SUBDOMAIN --build-arg DOCKER_NETWORK=$DOCKER_NETWORK --build-arg KAFKA_VERSION=$KAFKA_VERSION  --build-arg REDISEARCH_SERVER=$REDISEARCH_SERVER --build-arg FILE_SERVICE_REST_ADDRESS=$FILE_SERVICE_REST_ADDRESS .