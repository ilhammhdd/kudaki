#!/bin/bash

docker build -t $IMAGE_NAME --build-arg KAFKA_BROKERS=$KAFKA_BROKERS --build-arg DB_PATH=$DB_PATH --build-arg DB_USERNAME=$DB_USERNAME --build-arg DB_PASSWORD=$DB_PASSWORD --build-arg DB_NAME=$DB_NAME --build-arg KAFKA_VERSION=$KAFKA_VERSION --build-arg QUERY_DB_PATH=$QUERY_DB_PATH --build-arg QUERY_DB_USERNAME=$QUERY_DB_USERNAME --build-arg QUERY_DB_PASSWORD=$QUERY_DB_PASSWORD --build-arg QUERY_DB_NAME=$QUERY_DB_NAME .