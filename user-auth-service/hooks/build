#!/bin/bash

docker build -t $IMAGE_NAME --build-arg QUERY_DB_NAME=$QUERY_DB_NAME --build-arg QUERY_DB_PASSWORD=$QUERY_DB_PASSWORD --build-arg QUERY_DB_PATH=$QUERY_DB_PATH --build-arg QUERY_DB_USERNAME=$QUERY_DB_USERNAME --build-arg DB_NAME=$DB_NAME --build-arg DB_PASSWORD=$DB_PASSWORD --build-arg DB_PATH=$DB_PATH --build-arg DB_USERNAME=$DB_USERNAME --build-arg GATEWAY_HOST=$GATEWAY_HOST --build-arg GRPC_PORT=$GRPC_PORT --build-arg KAFKA_BROKERS=$KAFKA_BROKERS --build-arg MAIL=$MAIL --build-arg MAIL_HOST=$MAIL_HOST --build-arg MAIL_PASSWORD=$MAIL_PASSWORD --build-arg VERIFICATION_PRIVATE_KEY=$VERIFICATION_PRIVATE_KEY --build-arg VERIFICATION_PUBLIC_KEY=$VERIFICATION_PUBLIC_KEY --build-arg KAFKA_VERSION=$KAFKA_VERSION --build-arg RESET_PASSWORD_PRIVATE_KEY=$RESET_PASSWORD_PRIVATE_KEY --build-arg RESET_PASSWORD_PUBLIC_KEY=$RESET_PASSWORD_PUBLIC_KEY --build-arg MAIL_PORT=$MAIL_PORT --build-arg REDISEARCH_SERVER=$REDISEARCH_SERVER --build-arg USER_REPO_SERVICE_GRPC_ADDRESS=$USER_REPO_SERVICE_GRPC_ADDRESS .